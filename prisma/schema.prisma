generator client {
  provider = "prisma-client-js"
  output   = "./generated/db"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id             Int         @id @default(autoincrement())
  name           String
  description    String
  price          Int?
  listPrice      Int?
  soldPrice      Int?
  sold           Boolean     @default(false)
  soldAt         DateTime?
  activeFrom     DateTime?
  created        DateTime    @default(now())
  priceBreakdown String?
  imageLinks     ImageLink[] @relation("ProductToImageLink")
}

model ImageLink {
  link        String    @id
  descripiton String
  products    Product[] @relation("ProductToImageLink")
}
