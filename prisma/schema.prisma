generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ImageLink {
  id          Int       @id @default(autoincrement())
  link        String
  descripiton String
  Product     Product[] @relation("ImageLinkToProduct")
}

model Product {
  id             Int         @id @default(autoincrement())
  name           String
  description    String
  price          Int?
  listPrice      Int?
  soldPrice      Int?
  sold           Boolean     @default(false)
  soldAt         DateTime?
  activeFrom     DateTime?
  created        DateTime    @default(now())
  priceBreakdown String?
  deleted        Boolean     @default(false)
  ImageLinks     ImageLink[] @relation("ImageLinkToProduct")
}
